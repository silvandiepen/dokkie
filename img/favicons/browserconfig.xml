<android>
    <manifest.json>
        <name>Favicons</name>
        <short_name>Favicons</short_name>
        <description>Favicons</description>
        <dir>auto</dir>
        <lang>en-US</lang>
        <display>standalone</display>
        <orientation>portrait</orientation>
        <scope>/</scope>
        <start_url>./?utm_source=web_app_manifest</start_url>
        <background_color>{{color}}</background_color>
        <theme_color>{{themeColor}}</theme_color>
        <icons>
            <src>android-chrome-36x36.png</src>
            <sizes>36x36</sizes>
            <type>image/png</type>
        </icons>
        <icons>
            <src>android-chrome-48x48.png</src>
            <sizes>48x48</sizes>
            <type>image/png</type>
        </icons>
        <icons>
            <src>android-chrome-72x72.png</src>
            <sizes>72x72</sizes>
            <type>image/png</type>
        </icons>
        <icons>
            <src>android-chrome-96x96.png</src>
            <sizes>96x96</sizes>
