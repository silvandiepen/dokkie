        </icons>
    </manifest.json>
</android>
<firefox>
    <manifest.webapp>
        <version>1.0</version>
        <name>{{appName}}</name>
        <description>{{appDescription}}</description>
        <icons>
            <60>firefox_app_60x60.png</60>
            <128>firefox_app_128x128.png</128>
            <512>firefox_app_512x512.png</512>
        </icons>
        <developer>
            <name>{{appDeveloper}}</name>
            <url>{{appDeveloperUrl}}</url>
        </developer>
    </manifest.webapp>
</firefox>
<windows>
    <browserconfig.xml>
        <name>browserconfig</name>
        <children>
            <name>msapplication</name>
            <children>
                <name>tile</name>
                <children>
                    <name>square70x70logo</name>
                    <attrs>
                        <src>mstile-70x70.png</src>
                    </attrs>
                </children>
                <children>
                    <name>square150x150logo</name>
                    <attrs>
                        <src>mstile-150x150.png</src>
                    </attrs>
                </children>
                <children>
                    <name>wide310x150logo</name>
                    <attrs>
                        <src>mstile-310x150.png</src>
                    </attrs>
                </children>
                <children>
                    <name>square310x310logo</name>
                    <attrs>
                        <src>mstile-310x310.png</src>
                    </attrs>
                </children>
                <children>
                    <name>TileColor</name>
                    <text>{{color}}</text>
                </children>
            </children>
        </children>
    </browserconfig.xml>
</windows>
<yandex>
    <yandex-browser-manifest.json>
        <version>1</version>
        <api_version>1</api_version>
        <layout>
            <logo>yandex-browser-50x50.png</logo>
            <color>{{color}}</color>
            <show_title>true</show_title>
        </layout>
    </yandex-browser-manifest.json>
</yandex>