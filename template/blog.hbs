<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	{{#if package.description}}
	<meta name="description" content="{{ package.description }}" />
	{{/if}} {{#if package.keywords}}
	<meta name="keywords" content="{{ package.keywords }}" />
	{{/if}} {{#if package.author}}
	<meta name="author" content="{{ package.author }}" />
	{{/if}}
	{{{favicon}}}
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>{{ title }}</title>
	{{{ styles }}} {{{ scripts }}}
</head>

<body id="post-{{currentId}}">
	<!--- Page Header -->
	<header id="header">
		{{{injectHtml.headerBefore }}}
		{{>projectTitle}}
		{{>headerNavigation }}
		{{{injectHtml.headerAfter }}}
	</header>

	<!--- Main Content -->
	<article id="article" class="article content">
		{{{injectHtml.articleBefore }}}
		{{{ content }}}
		{{{injectHtml.articleAfter }}}
	</article>


	<!--- Page Footer Content -->
	<footer id="blog-footer">
		{{{injectHtml.overviewBefore }}}
		{{> overviewNavigation }}
		{{{injectHtml.overviewAfter }}}
	</footer>

	{{#if footerNavigation.menu.[1]}}
	<!--- Page Footer Content -->
	<footer id="footer">
		{{> footerNavigation }}
	</footer>
	{{/if}}

</body>

</html>