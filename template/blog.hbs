<!DOCTYPE html>
<html lang="{{language}}">

<head>
	{{> headMeta }}
	{{{ favicon }}}
	{{{ styles }}}
	{{{ scripts }}}
</head>

<body id="post-{{currentId}}">

	<!--- Page Header -->
	<header id="header">
		{{{ injectHtml.headerBefore }}}
		{{> projectTitle }}
		{{> headerNavigation }}
		{{> searchBlock }}
		{{{ injectHtml.headerAfter }}}
	</header>

	<!--- Main Content -->
	<article id="article" class="article content">
		{{{injectHtml.articleBefore }}}
		{{{ content }}}
		{{> blogMeta}}
		{{{injectHtml.articleAfter }}}
	</article>


	<!--- Page Footer Content -->
	<footer id="blog-footer">
		{{{injectHtml.overviewBefore }}}
		{{> overviewNavigation }}
		{{{injectHtml.overviewAfter }}}
	</footer>

	<!--- Page Footer Content -->
	{{#if footerNavigation.menu.[1]}}
	<footer id="footer">
		{{> footerNavigation }}
	</footer>
	{{/if}}

</body>

{{> loadScripts }}
{{> searchScript }}

</html>