{{#if footerNavigation.menu.[1] }}
<nav class="{{footerNavigation.showClass}}">
    <ul>
        {{#each footerNavigation.menu}}
        {{#if (eq link ../currentLink) }}<li class="active">{{/if}}

            {{#if (ne link ../currentLink) }}
        <li>{{/if}}

            <a href="{{ link }}">{{ name }}</a>
            {{#if children.[0] }}
            <ul>
                {{#each children }}
                {{#if (eq link ../../currentLink) }}<li class="active">{{/if}}

                    {{#if (ne link ../../currentLink) }}
                <li>{{/if}}
                    <a href="{{ link }}">{{ name }}</a>
                </li>
                {{/each}}
            </ul>
            {{/if}}
        </li>
        {{/each}}
    </ul>
</nav>
{{/if}}